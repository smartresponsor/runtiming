{
  "name": "smartresponsor/runtime-supercharger",
  "description": "Runtime Supercharger Symfony bundle: deterministic worker wrappers, telemetry, reset safety, and RC gates.",
  "type": "symfony-bundle",
  "license": "proprietary",
  "require": {
    "php": "^8.2",
    "symfony/config": "^6.4 || ^7.0 || ^8.0",
    "symfony/console": "^6.4 || ^7.0 || ^8.0",
    "symfony/dependency-injection": "^6.4 || ^7.0 || ^8.0",
    "symfony/event-dispatcher": "^6.4 || ^7.0 || ^8.0",
    "symfony/http-foundation": "^6.4 || ^7.0 || ^8.0",
    "symfony/http-kernel": "^6.4 || ^7.0 || ^8.0",
    "symfony/options-resolver": "^6.4 || ^7.0 || ^8.0"
  },
  "require-dev": {
    "doctrine/dbal": "^3.7 || ^4.0",
    "doctrine/orm": "^2.17 || ^3.0",
    "nyholm/psr7": "^1.8",
    "phpstan/phpstan": "^1.11",
    "phpunit/phpunit": "^10.5",
    "symfony/dotenv": "^6.4 || ^7.0 || ^8.0",
    "symfony/phpunit-bridge": "^6.4 || ^7.0 || ^8.0",
    "symfony/psr-http-message-bridge": "^2.1"
  },
  "suggest": {
    "spiral/roadrunner-http": "Optional: required to run tools/runtime/worker-roadrunner.php (RoadRunner engine).",
    "rector/rector": "Optional: code modernization tool (not required for CI gate baseline)."
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "Test/"
    }
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml.dist",
    "phpstan": "phpstan analyse -c phpstan.neon"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "symfony/flex": true
    },
    "classmap-authoritative": true
  }
}
