# env.runtime-rr.env â€” suggested env for RoadRunner profile

# Identify engine (optional; used by detector)
RUNTIME_ENGINE=rr

# Endpoint security (keep enabled)
RUNTIME_ENDPOINT_SECURITY_ENABLED=1
RUNTIME_ENDPOINT_SECURITY_MODE=allowlist_or_token
RUNTIME_ENDPOINT_ALLOW_CIDR=127.0.0.1/8,::1/128
RUNTIME_ENDPOINT_TOKEN=
RUNTIME_ENDPOINT_TOKEN_HEADER=X-Runtime-Token
RUNTIME_ENDPOINT_PROXY_STRICT=1

# Worker lifecycle
RUNTIME_WORKER_LIFECYCLE_ENABLED=1
RUNTIME_WORKER_MAX_REQUEST=1000
RUNTIME_WORKER_MAX_MEMORY_MB=512
RUNTIME_WORKER_MAX_UPTIME_SECOND=3600
RUNTIME_WORKER_DRAIN_SECOND=10

# Worker reset
RUNTIME_WORKER_RESET_ENABLED=1
RUNTIME_WORKER_RESET_KERNEL=1
RUNTIME_WORKER_RESET_DOCTRINE=1
